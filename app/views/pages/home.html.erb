<div class="row-fluid">

  <div class="span10 offset1">
  <h1 class="center text-info">Welcome to Super CraigsList Rails Jobs Finder</h1>
  </div>
 
</div> 
  
<div class="row-fluid">

    <div class="span3 offset1">
      
     <h3>Rails and Angular Jobs</h3>
     <p>Check out the daily Rails and Angular Job Posts</p>
     <%= form_tag("/search", :method => "get") do %>
      <%= label_tag(:q, "Search for:") %>
      <%= text_field_tag(:q) %>
      <%= submit_tag("Search") %>
     <% end %>
     
     
     <%= form_tag("/jobs", :method => "get") do %>

